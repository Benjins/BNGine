#include "bngine.bni"

float currTime;

float speedFactor;

void start(){
	currTime = 0;
	speedFactor = 2;
}

void update(){
	Vector3 currPos = GetLocalPosition(entity);
	float deltaTime = GetDeltaTime();
	
	currTime = currTime + deltaTime;
	
	if (currTime < 0.5){
		currPos.y = currPos.y + deltaTime;
	}
	
	if (currTime > 0.5){
		currPos.y = currPos.y - deltaTime;
	}
	
	if (currTime > 1.0){
		currTime = 0;
	}
	
	SetLocalPosition(entity, currPos);
}
